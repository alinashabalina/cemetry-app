<h2 class="explore">Explore</h2>

<div class="wrapper">
<form action="/index" method="get" class="search-form">
  <div style="display:flex; justify-content: space-between;">
  <input type="text" name="title" class="search-input" placeholder="enter a city">
  <input type="submit" class="search-button">
  </div>
</form>

<div class="popular-header">you might look for...</div>
<div class="scrolling-wrapper">
<% if @cities.any? %>
    <% @cities.each do |city| %>
<div class="card">
<div class="city"><%= link_to city.title, city_path(city.id), :style=>'color: black; text-decoration: none;'%></div>
<% if city.id == 2%>
<img src="<%= asset_path('berlin.svg') %>">
<% elsif city.id == 1%>
<img src="<%= asset_path('bad.svg') %>">
<% elsif city.id == 3%>
<img src="<%= asset_path('drsden.svg') %>">
<% elsif city.id == 4%>
<img src="<%= asset_path('hamburg.svg') %>">
<% elsif city.id == 5%>
<img src="<%= asset_path('munich.svg') %>">
<% elsif city.id == 6%>
<img src="<%= asset_path('wÃ¼rzburg.svg') %>">
<% end %>
</div>
    <% end %>

<% else %>
<div style="width: 100%;">
 <div class="sorry">Sorry, no city found</div>
<% end %>
</div>
</div>

