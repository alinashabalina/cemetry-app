<div class="guide-container">

  <div class="photo-container">
 <%= cl_image_tag @guide.photo.key, :class => "guide-photo-large", cached: true%>
 </div>

 <div class="mega-wrappers">
 <h4><%= @guide.name %></h4>
 <div class="buttons-container">
  <a href="<%= @guide.social_1 %>" class="socials-button">My Instagram Account</a>
  <a href="<%= @guide.social_2 %>" class="socials-button">My LinkedIn Account</a>
  <a href="<%= @guide.social_3 %>" class="socials-button">My Patreon Account</a>
 </div>
 <div class="guide-info"><%= @guide.bio %></div>


<% if @self == "no" %>
<% if @id == "yes" %>
<div class="sub-container" data-controller="guide-subscription">
<button class="subscription-button" disabled>Already subscribed</button>
 <div class="sub-count" data-guide-subscription-target="subscription">
   <%= @count %>
</div>
</div>
<% else %>
<div class="sub-container" data-controller="guide-subscription">
<button class="subscription-button" data-guide-subscription-target="button" data-action="click->guide-subscription#subscribe">Subscribe</button>
 <div class="sub-count" data-guide-subscription-target="subscription">
 <%= @count %>
</div>
</div>
<% end %>
<% else %>
<div></div>
<% end %>
</div>

</div>
